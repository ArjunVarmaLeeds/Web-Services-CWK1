generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

// AUTH & USERS

model User {
    id           Int       @id @default(autoincrement())
    email        String    @unique
    passwordHash String
    createdAt    DateTime  @default(now())

    favorites    FavoritePlayer[]
}

// USER -> SAVED PLAYERS

model FavoritePlayer {
    id        Int    @id @default(autoincrement())
    userId    Int
    playerId  Int

    user      User   @relation(fields: [userId], references: [id])
    player    Player @relation(fields: [playerId], references: [id])

    @@unique([userId, playerId])
}

// RIOT PLAYER

model Player {
    id          Int      @id @default(autoincrement())
    puuid       String   @unique
    gameName    String
    tagLine     String
    region      String
    createdAt   DateTime @default(now())
    lastUpdated DateTime

    matches     MatchPlayer[]
    ranks       Rank[]
    favorites   FavoritePlayer[]
}

// RANK HISTORY

model Rank {
    id        Int      @id @default(autoincrement())
    playerId  Int
    tier      String
    rank      String
    rr        Int
    wins      Int
    updatedAt DateTime @default(now())

    player    Player   @relation(fields: [playerId], references: [id])

    @@index([playerId])
}

// MATCH

model Match {
    id        Int      @id @default(autoincrement())
    matchId   String   @unique
    map       String
    gameMode  String
    startedAt DateTime
    duration  Int

    players   MatchPlayer[]
}

// PLAYER IN MATCH

model MatchPlayer {
    id          Int     @id @default(autoincrement())

    matchId     Int
    playerId    Int

    agent       String
    team        String

    kills       Int
    deaths      Int
    assists     Int

    score       Int
    damage      Int
    econRating  Float
    firstBloods Int

    won         Boolean

    match       Match   @relation(fields: [matchId], references: [id])
    player      Player  @relation(fields: [playerId], references: [id])

    @@unique([matchId, playerId])
    @@index([playerId])
    @@index([matchId])
}

